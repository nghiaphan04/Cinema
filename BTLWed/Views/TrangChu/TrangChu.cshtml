@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "TrangChu";
    Layout = "~/Views/Shared/_LayoutCinema.cshtml";
}


<div id="main" class="bg-black text-white pb-5">

    @* slide *@

    <div id="slide-web" class="carousel slide pt-5 " data-bs-ride="carousel">
        <!-- Indicators/dots -->
        <ul class="carousel-indicators">
            <li data-bs-target="#slide-web" data-bs-slide-to="0" class="active"></;type=>
            <li data-bs-target="#slide-web" data-bs-slide-to="1"></li></;type=>
            <li data-bs-target="#slide-web" data-bs-slide-to="2"></li></;type=>
            <li data-bs-target="#slide-web" data-bs-slide-to="3"></li></;type=>
        </ul>
        <!-- The slideshow/carousel -->
        <div class="carousel-inner ">
            <div class="carousel-item ">
                <img src="../Layout/images/slide-1.jpg" alt="" class="d-block " style="width:100%">
            </div>
            <div class="carousel-item active">
                <img src="../Layout/images/slide-2.jpg" alt="" class="d-block" style="width:100%">
            </div>
            <div class="carousel-item">
                <img src="../Layout/images/tuan-le-phim-viet-uu-dai-kick-liet-1702-x-621-145659-201023-53.png" alt="" class="d-block" style="width:100%">
            </div>
            <div class="carousel-item">
                <img src="../Layout/images/slide-5.png" alt="" class="d-block" style="width:100%">
            </div>

        </div>

        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#slide-web" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next " type="button" data-bs-target="#slide-web" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    @* COMBO 2 NƯỚC 1 BỎNG
    CHỈ 99K
    TIN CHUẨN ĐÉTTT *@

    <div class="col-md-12 " style="margin-top: 60px;">

        <h1 class="text-center">
            COMBO 2 NƯỚC 1 BỎNG
            <br><span style="color: #a91111;">CHỈ 99K</span>  <br>
            TIN CHUẨN ĐÉTTT
        </h1>
        <div class="col-md-5 text-center mx-auto mb-5" style="text-align: justify;">
            <p style="font-size: 11px;" class="px-2">Chương trình áp dụng từ ngày 11/10/2023 đến 11/11-2023 cho tất cả các khách hàng mới đăng kí và mua vé trực tuyến trên ứng dụng điện thoại của <span>CineFilm</span> còn chần chừ gì nữa mà không mua ngay</p>
            <button class="buy-btn1 mt-5">
                MUA VÉ NGAY
            </button>
        </div>
        <div class="col-md-12 text-center pb-5 pt-3">
            <i class="ti-angle-double-right mx-3 text-info"></i>
            <i class="ti-angle-double-left mx-3 text-info"></i>
        </div>


    </div>


    @* ddang chieu sap chieu *@


    <div class="container-fluid mt-5">


        <!-- Nav tabs -->
        <div class="nav justify-content-center nav-underline bg-white rounded-4 nav-tab-bg">
            <div class="nav-item dang-chieu pb-2">
                <a class="nav-link active p-0" data-bs-target="#menu-dang-chieu" data-bs-toggle="tab"><h2 class="">Phim đang chiếu</h2></a>
            </div>
            <div class="nav-item sap-chieu pb-2 ">
                <a class="nav-link p-0" data-bs-toggle="tab" data-bs-target="#menu-sap-chieu"><h2 class="">Phim sắp chiếu</h2></a>
            </div>
        </div>
        <!-- Tab panes -->
        <div class="tab-content tab">
            <div class="tab-pane container active" id="menu-dang-chieu">
                <div class="row ">
                   
                    @foreach (var phim in ViewBag.DanhSachPhimDangChieu)
                    {
                        <div class="col-md-4 col-sm-6 col-lg-3 col-12 mt-5">
                            <div class="col-md-11 mx-auto">
                                <div class="card bg-light">
                                    
                                    <a asp-action="ChiTietPhim" asp-controller="TrangChu" asp-route-PhimId="@phim.PhimId">
                                        <img src="@Url.Content("~/Layout/images/" +phim.Poster)"  alt="Image" class="card-img-top img-poster-homepage" style="height:350px;">
                                    </a>
                                    <div class="card-body">
                                        <h5>
                                            <a asp-action="ChiTietPhim" asp-controller="TrangChu" asp-route-PhimId="@phim.PhimId" class="title-film card-link text-danger text-decoration-none">@phim.TenPhim</a>
                                        </h5>
                                        <p>
                                            <b>Thể loại:</b> @phim.TheLoai <br>
                                            <b>Thời lượng:</b> @phim.ThoiLuong phút <br>
                                            <b>Trạng thái:</b> <i>@phim.TrangThaiVe</i>
                                        </p>
                                        <a asp-action="ChiTietPhim" asp-controller="TrangChu" asp-route-PhimId="@phim.PhimId" class="btn btn-danger text-white col-md-12 buy-btn">Mua vé</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>


            <div class="tab-pane container fade" id="menu-sap-chieu">
                <div class="row ">

                    @foreach (var phim in ViewBag.DanhSachPhimSapChieu)
                    {
                        <div class="col-md-4 col-sm-6 col-lg-3 col-12 mt-5">
                            <div class="col-md-11 mx-auto">
                                <div class="card bg-light">
                                    <a asp-action="ChiTietPhim" asp-controller="TrangChu" asp-route-PhimId="@phim.PhimId">
                                        <img src="@Url.Content("~/Layout/images/" +phim.Poster)" alt="Image" class="card-img-top img-poster-homepage" style="height:350px;">
                                    </a>
                                    <div class="card-body">
                                        <h5>
                                            <a asp-action="ChiTietPhim" asp-controller="TrangChu" asp-route-PhimId="@phim.PhimId" class="title-film card-link text-danger text-decoration-none">@phim.TenPhim</a>
                                        </h5>
                                        <p>
                                            <b>Thể loại:</b> @phim.TheLoai <br>
                                            <b>Thời lượng:</b> @phim.ThoiLuong phút <br>
                                            <b>Trạng thái:</b> <i>@phim.TrangThaiVe</i>
                                        </p>
                                        <a asp-action="ChiTietPhim" asp-controller="TrangChu" asp-route-PhimId="@phim.PhimId" class="btn btn-danger text-white col-md-12 buy-btn">Mua vé</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
        <div class="news-section mt-5">
            <h4 class="py-2 mx-lg-5 mx-sm-0 px-lg-0 px-sm-0 px-0 col-md-3 text-white" style="border-bottom: 3px solid #a91111;">Tin Tức</h4>
            @foreach (var tin in ViewBag.DanhSachTinTuc)
            {
                <div class="review-item col-md-12 col-12 row col-lg-8 mt-4 p-0 mx-0 mx-lg-5">
                    <div class="col-md-3 col-12 col-lg-3 col-sm-3 p-0 m-0">
                        <img src="@Url.Content("~/Layout/images/" +tin.AnhDaiDien)" alt="Image" class="img-fluid rounded border border-1">
                    </div>
                    <div class="col-md-8 col-12 col-lg-8 col-sm-8 p-0 ms-lg-2 ms-md-2 ms-0 ps-sm-2" style="font-size: 13px;">
                        <p class="mb-1">
                            <a href="#" class="text-decoration-none text-white" style="font-size: 15px; font-weight: 700;">
                                @tin.TieuDe
                            </a>
                        </p>
                        <p class="mb-1">
                            <span class="text-decoration-none text-white">Bởi @tin.TacGia</span>
                            <span class="text-white">· @tin.NgayDang.ToString("dd/MM/yyyy")</span>
                        </p>
                        <p class="mb-1">
                            @tin.NoiDung
                        </p>
                    </div>
                </div>
            }
        </div>


    </div>



    @*  review *@







</div>
